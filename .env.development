# Development Environment Configuration
# This file contains development-specific overrides

# Docker Compose Configuration
COMPOSE_FILE=docker-compose.yml

# Service Build Targets
FRONTEND_TARGET=development
BACKEND_TARGET=development

# Port Mappings (host:container)
FRONTEND_PORT=3000:3000
BACKEND_PORT=8000:8000
POSTGRES_PORT=5432:5432
REDIS_PORT=6379:6379

# Database Configuration
POSTGRES_DB=fourmore
POSTGRES_USER=fourmore
POSTGRES_PASSWORD=fourmore_dev_password
DATABASE_URL=postgresql://fourmore:fourmore_dev_password@postgres:5432/fourmore

# Redis Configuration
REDIS_URL=redis://redis:6379

# Application Configuration
DEBUG=true
ENVIRONMENT=development
NODE_ENV=development

# JWT Configuration (development only - weak secret)
JWT_SECRET_KEY=dev_jwt_secret_key_replace_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# OSM API Configuration (development placeholders)
OSM_CLIENT_ID=your_dev_osm_client_id
OSM_CLIENT_SECRET=your_dev_osm_client_secret
OSM_REDIRECT_URI=http://localhost:3000/auth/callback

# Data Pipeline Configuration
OSM_DATA_FILE=/app/data/utah-latest.osm.pbf
DATA_DIR=/app/data

# Volume Mount Options for Development
FRONTEND_VOLUMES=./frontend:/app:cached
BACKEND_VOLUMES=./backend/app:/app/app:ro
DATA_VOLUMES=./data:/app/data