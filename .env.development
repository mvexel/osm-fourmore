# Development container defaults for docker compose
# Copy this file to .env.development.local for real secrets (Makefile prefers .local automatically)
# Override DATABASE_URL/DB host values when targeting a system Postgres instance
POSTGRES_DB=fourmore
POSTGRES_USER=fourmore
POSTGRES_PASSWORD=fourmore_dev_password
POSTGRES_PORT=5432

DATABASE_URL=postgresql://fourmore:fourmore_dev_password@postgres:5432/fourmore
DATABASE_NAME=fourmore
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=fourmore
DATABASE_PASSWORD=fourmore_dev_password
# For system Postgres, point DATABASE_URL/HOST at host.docker.internal (or your DB host)

REDIS_PORT=6379
REDIS_URL=redis://redis:6379

BACKEND_PORT=8000
FRONTEND_PORT=3000

ENVIRONMENT=development
DEBUG=true

JWT_SECRET_KEY=dev_jwt_secret_key_replace_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

OSM_CLIENT_ID=your_dev_osm_client_id
OSM_CLIENT_SECRET=your_dev_osm_client_secret
OSM_REDIRECT_URI=http://127.0.0.1:3000/auth/callback

VITE_API_BASE_URL=http://127.0.0.1:8000

OSM_DATA_FILE=/app/data/utah-latest.osm.pbf
