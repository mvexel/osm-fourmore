# FourMore Environment Configuration
# Copy this file to .env.local for local development

# Database Configuration
DATABASE_URL=postgresql://fourmore:fourmore_dev_password@localhost:5432/fourmore

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production

# Environment
ENVIRONMENT=development

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Data Population
# Set to true to download and populate Utah POI data on startup
POPULATE_UTAH_DATA=false

# OSM OAuth (get from https://www.openstreetmap.org/oauth2/applications)
OSM_CLIENT_ID=your_osm_client_id
OSM_CLIENT_SECRET=your_osm_client_secret
OSM_REDIRECT_URI=http://127.0.0.1:3000/auth/callback

# Production-only settings (for VPS deployment)
# DB_PASSWORD=your_secure_database_password
# DOMAIN_NAME=yourdomain.com
# SSL_EMAIL=your@email.com